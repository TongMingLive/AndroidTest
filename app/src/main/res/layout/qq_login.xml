<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingTop="45dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@mipmap/gco"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="QQ号/手机号/邮箱"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:inputType="number"
        android:id="@+id/qqlogin_qqnum_input_text"
        android:textCursorDrawable="@null"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:maxLength="16"
        android:id="@+id/qqlogin_qqnum_input_psw"
        android:textCursorDrawable="@null"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="登 录"
        android:layout_margin="15dp"
        android:background="#0cf"
        android:textColor="#fff"
        android:textSize="18sp"
        android:id="@+id/qqlogin_qqnum_input_btn"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务条款"
        android:textSize="15sp"
        android:gravity="left|center"
        android:paddingLeft="18dp"
        android:textColor="#0cf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="无法登录？"
            android:gravity="left|bottom"
            android:paddingLeft="18dp"
            android:paddingBottom="15dp"
            android:textColor="#0cf"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#eee"
            android:text="新用户注册"
            android:gravity="right|bottom"
            android:paddingRight="18dp"
            android:paddingBottom="15dp"
            android:textColor="#0cf"
            android:id="@+id/regist_newUser"/>
    </LinearLayout>
</LinearLayout>