<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/myAdapter_test_img"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/imga" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="《"
                android:textColor="#f23"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/myAdapter_test_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="末日浩劫"
                android:textColor="#f23"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="》"
                android:textColor="#f23"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="￥"
                android:textColor="#555"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/myAdapter_test_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="45"
                android:textColor="#555"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="元"
                android:textColor="#555"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/myAdapter_test_btnsub"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="-"
                android:gravity="center_horizontal"
                android:background="@drawable/red_sumchange_button"
                android:textSize="20sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/myAdapter_test_Edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#555"/>
            <Button
                android:id="@+id/myAdapter_test_btnadd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="+"
                android:gravity="center_horizontal"
                android:background="@drawable/red_sumchange_button"
                android:textSize="20sp"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>