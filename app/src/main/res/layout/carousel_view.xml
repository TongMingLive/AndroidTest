<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/carousel_vp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <View
            android:id="@+id/carousel_hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efefef" />

        <LinearLayout
            android:id="@+id/carousel_dot_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carousel_hr"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/carousel_dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/dot_full" />

            <ImageView
                android:id="@+id/carousel_dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/dot_full" />

            <ImageView
                android:id="@+id/carousel_dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/dot_full" />

            <ImageView
                android:id="@+id/carousel_dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/dot_full" />
        </LinearLayout>

        <TextView
            android:id="@+id/carousel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carousel_dot_group"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="蓝色北极光"
            android:textColor="#FFE"
            android:textSize="19sp" />
    </RelativeLayout>
</LinearLayout>