<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="40sp"
        android:paddingRight="10dp"
        android:gravity="right|bottom"
        android:singleLine="true"
        android:ellipsize="none"
        android:id="@+id/tv_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:text="0"
        android:textSize="80sp"
        android:textColor="#fff"
        android:paddingRight="10dp"
        android:gravity="right|bottom"
        android:singleLine="true"
        android:ellipsize="none"
        android:id="@+id/tv_push"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="0.5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="AC"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_ac"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+/-"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_zf"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="%"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_fen"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="÷"
            android:background="@drawable/org_buttons"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_cu"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="0.5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_7"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_9"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="×"
            android:background="@drawable/org_buttons"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_chen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="0.5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@drawable/org_buttons"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_jian"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="0.5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:background="@drawable/org_buttons"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_jia"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:onClick="countClick"
            android:id="@+id/btn_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:background="@drawable/wit_buttons"
            android:layout_marginRight="0.5dp"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_dian"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:background="@drawable/org_buttons"
            android:textSize="25sp"
            android:layout_weight="0.25"
            android:onClick="countClick"
            android:id="@+id/btn_deng"/>
    </LinearLayout>

    <Button
        android:onClick="back"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#0cf"
        android:text="返  回"
        android:textSize="15sp"
        android:textColor="#fff"/>

</LinearLayout>